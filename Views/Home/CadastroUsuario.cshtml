@{
    ViewData["Title"] = "Cadastro";
}
<!--<div class="container">-->
<div class="row justify-content-md-center">
    <div class="jumbotron col-6">
        <h1>Fa√ßa o Cadastro no sistema Biblioteca</h1>
        <form asp-action="CadastroUsuario" method="POST">
            <div class="form-group">
                <input type="text" placeholder="Nome" class="form-control" name="nomeUsuario" />
            </div>
            <div class="form-group">
                <input type="text" placeholder="Login" class="form-control" name="login" />
            </div>
            <div class="form-group">
                <input type="password" placeholder="Senha" class="form-control" name="senha" />
            </div>
            <select name="tipoUsuario">
                <option value="admin">admin</option>
                <option value="normal" selected>padrao</option>
            </select>
            <a href="Sucesso">Cadastrar</a>
        </form>
        <p class="text-danger">@ViewData["Erro"]</p>
    </div>
</div>
